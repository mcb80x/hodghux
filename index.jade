html

  head

    // script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.3/jquery.min.js')
    // script(src='http://ajax.googleapis.com/ajax/libs/jqueryui/1.9.2/jquery-ui.min.js')
    script(src='http://mbostock.github.com/d3/d3.js')
    script(src='js/hh-debug.js')

    link(rel='stylesheet', type='text/css', href='css/jquery-ui-1.9.2.custom.css')
    link(rel='stylesheet', type='text/css', href='css/hh.css')

  body

    #stage
      #art


    #floaty.properties-pane
      label Na Conductance:
        span(data-bind='text: gbar_Na')
      br
      div(data-bind="slider: gbar_Na, sliderOptions: {min: 0, max: 300, range: false, step: 5}")

    #properties
      ul
        li
          label External current:
            input(data-bind='value: I_ext')

        li
          label Membrane Potential:
            input(data-bind='value: v')
        li
          label I_Na:
            p(data-bind='text: I_Na')

        li
          label I_K:
            p(data-bind='text: I_K')

        li
          label m:
            p(data-bind='text: m')
        li
          label n:
            p(data-bind='text: n')
        li
          label h:
            p(data-bind='text: h')

        li
          label Na Channel Visible:
            input(type='checkbox', data-bind="checked: NaChannelVisible")
        li
          label Na Channel Open:
            input(type='checkbox', data-bind="checked: NaChannelOpen")

